    <div class="col-6 center">
        <h4 class="quadrant">Upcoming</h4>
        <br />
        <table class="table table-bordered table-striped">
            <thead class="font-weight-bold">
                        <tr>
                            <td>Name</td>
                            <td>Group Size</td>
                            <td>Date</td>
                            <td>Email</td>
                            <td>Phone</td>
                            <td></td>
                            <td></td>
                        </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    if (x.Completed == false)
                    {
                        <tr>
                            <td>@x.Name</td>
                            <td>@x.Size</td>
                            <td>@x.DateTime</td>
                            <td>@x.Email</td>
                            <td>@x.Phone</td>
                            <td><a href="">Edit</a></td>
                            <td><a href="">Delete</a></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>


    <div class="col-6 center">
        <h4 class="quadrant">Completed</h4>
        <br />
        <table class="table table-bordered table-striped">
            <thead class="font-weight-bold">
                        <tr>
                            <td>Name</td>
                            <td>Group Size</td>
                            <td>Date</td>
                            <td>Email</td>
                            <td>Phone</td>
                            <td></td>
                            <td></td>
                        </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    if (x.Completed == true)
                    {
                        <tr>
                            <td>@x.Name</td>
                            <td>@x.Size</td>
                            <td>@x.DateTime</td>
                            <td>@x.Email</td>
                            <td>@x.Phone</td>
                            <td><a href="">Edit</a></td>
                            <td><a href="">Delete</a></td>
                        </tr>
                    }
                }
            </tbody>
        </table>

    </div>
</div>


